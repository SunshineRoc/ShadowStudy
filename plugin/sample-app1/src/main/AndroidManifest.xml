<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tencent.shadow.sample.plugin.app.lib.base.plugin">

    <application
        android:name="com.tencent.shadow.sample.plugin1.PluginOneApplication"
        android:icon="@android:drawable/sym_def_app_icon"
        android:theme="@android:style/Theme.NoTitleBar">

        <activity
            android:name="com.tencent.shadow.sample.plugin1.PluginOneMainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.tencent.shadow.sample.plugin1.receiver.PluginOneBroadcastReceiver">
            <intent-filter>
                <action android:name="com.tencent.shadow.sample.plugin1.receiver.PluginOneBroadcastReceiver.action" />
            </intent-filter>
        </receiver>
    </application>
</manifest>

